<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>RepairKitAT</defName>
    <label>Upgrade Kit</label>
    <description>This kit is specifically made to help in the repair and modification of androids.</description>
    <graphicData>
      <texPath>Things/RepairKit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
		<statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>30</MarketValue>
      <Mass>0.45</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <tradeability>All</tradeability>
    <techLevel>Spacer</techLevel>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
	<tickerType>Rare</tickerType>
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
  </ThingDef>
  
   <RecipeDef>
      <defName>RepairKitAT</defName>
      <label>Make a upgrade kit</label>
      <description>Create a simple set of tools and materials for an android upgrade kit.</description>
      <jobString>Making upgrade kit</jobString>  
      <allowMixingIngredients>false</allowMixingIngredients>
      <ingredients>
         <li>
            <filter>
               <thingDefs>
                  <li>Steel</li>
               </thingDefs>
            </filter>
            <count>20</count>
         </li>
      </ingredients>
      <products>
         <RepairKitAT>1</RepairKitAT>
      </products>
      <workAmount>1650</workAmount>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
	 <recipeUsers>
		<li>TableMachining</li>
		<li>AndroidPartsTable</li>
      </recipeUsers>
      
	</RecipeDef>

   <RecipeDef>
      <defName>AIPersonaCore</defName>
      <label>Make an AI persona core</label>
      <description>Create a complexe AI core capable of sentience.</description>
